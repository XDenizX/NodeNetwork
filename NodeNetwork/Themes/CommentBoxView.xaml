<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:views="clr-namespace:NodeNetwork.Views">
    <Style TargetType="{x:Type views:CommentBoxView}">
        <Setter Property="Background" Value="#60101010"/>
        <Setter Property="Foreground" Value="#FFFFFFFF"/>
        <Setter Property="ContentFontFamily" Value="Segoe UI Semibold"/>
        <Setter Property="ContentFontSize" Value="18"/>
        <Setter Property="Content" Value=""/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:CommentBoxView}">
                    <Border
                        x:Name="Border"
                        Background="{TemplateBinding Background}"
                        Margin="10"
                        Width="100"
                        Height="40">
                        <Grid>
                            <TextBlock
                                Text="{TemplateBinding Content}"
                                FontSize="{TemplateBinding ContentFontSize}"
                                FontFamily="{TemplateBinding ContentFontFamily}"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>